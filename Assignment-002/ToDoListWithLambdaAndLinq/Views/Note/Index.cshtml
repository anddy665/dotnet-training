@model IEnumerable<ToDoListWithLambdaAndLinq.Models.Note>

<h2>Notes</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Tags</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var note in Model)
        {
            <tr>
                <td>@note.Title</td>
                <td>@note.Category.Name</td>
                <td>
                    @foreach (var tag in note.NoteTags)
                    {
                        <span>@tag.Tag.Name</span>
                    }
                </td>
                <td>@note.CreatedAt</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@note.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@note.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@note.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
