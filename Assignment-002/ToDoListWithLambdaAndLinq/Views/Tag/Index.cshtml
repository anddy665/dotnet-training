@model IEnumerable<ToDoListWithLambdaAndLinq.Models.Tag>

<h2>Tags</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Created At</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model)
        {
            <tr>
                <td>@tag.Name</td>
                <td>@tag.CreatedAt</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tag.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@tag.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@tag.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
