@model IEnumerable<Product_Management.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Category</td>
                <td>
                    <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-code="@item.Code">Edit</a> |
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-code="@item.Code">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
